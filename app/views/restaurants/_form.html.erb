
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Write the name of the restaurant here' %>
    <%= f.input :address, placeholder: 'Write the address of the restaurant here' %>
    <%= f.input :phone_number, placeholder: 'Write the phone number of the restaurant here' %>
    <%= f.label :category %>
    <%= f.select :category, category: Restaurant::CATEGORY %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
